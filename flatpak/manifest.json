{
  "app-id": "org.matthew.wallpaper",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.4",
  "sdk": "org.kde.Sdk",
  "command": "wallpaper-cpp",
  "modules": [
    {
      "name": "wallpaper-app",
      "buildsystem": "cmake",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_INSTALL_PREFIX=/app"
      ],
      "post-install": [
        "install -Dm644 flatpak/data/wallpaper.desktop /app/share/applications/org.matthew.wallpaper.desktop",
        "install -Dm644 flatpak/data/icons/128x128.png /app/share/icons/hicolor/128x128/apps/org.matthew.wallpaper.png",
        "install -Dm644 flatpak/data/icons/64x64.png /app/share/icons/hicolor/64x64/apps/org.matthew.wallpaper.png"
      ],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        }
      ]
    }
  ],
  "finish-args": [
    "--share=network",
    "--filesystem=home",
    "--socket=x11",
    "--socket=wayland",
    "--talk-name=org.freedesktop.portal.Desktop",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.kde.plasmashell",
    "--socket=session-bus",
    "--device=dri",
    "--share=ipc"
  ]
}
